# Docker Compose 环境变量模板
# 复制此文件为 .env 并修改配置
# cp docker-env-template .env

# ⚠️ 生产环境请修改所有默认密码

# MySQL配置
MYSQL_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD_IN_PRODUCTION
MYSQL_DATABASE=ai_code_audit_prod
MYSQL_USER=ai_audit
MYSQL_PASSWORD=CHANGE_THIS_MYSQL_PASSWORD_IN_PRODUCTION

# Redis配置
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_IN_PRODUCTION

# 应用配置
SECRET_KEY=CHANGE_THIS_SECRET_KEY_MINIMUM_32_CHARACTERS_LONG_IN_PRODUCTION
AI_API_KEY=your_ai_api_key_here

# 域名配置
DOMAIN_NAME=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# 环境标识
ENVIRONMENT=production
DEBUG=false
