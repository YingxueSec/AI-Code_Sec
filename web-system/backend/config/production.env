# 生产环境配置文件
# ⚠️ 请根据实际环境修改这些配置

# 数据库配置
DATABASE_URL=mysql+asyncio://ai_audit:CHANGE_THIS_PASSWORD@localhost:3306/ai_code_audit_prod
DB_HOST=localhost
DB_PORT=3306
DB_USER=ai_audit
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_NAME=ai_code_audit_prod

# Redis配置（用于缓存和会话存储）
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# JWT配置
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# API配置
API_V1_STR=/api/v1
PROJECT_NAME=AI Code Audit System
VERSION=1.0.0
DESCRIPTION=AI代码审计系统生产环境

# CORS配置
ALLOWED_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# AI服务配置
AI_API_KEY=CHANGE_THIS_TO_YOUR_AI_API_KEY
AI_API_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-4
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.1

# 文件上传配置
MAX_UPLOAD_SIZE=50485760  # 50MB
UPLOAD_DIR=/var/uploads
ALLOWED_EXTENSIONS=.py,.js,.jsx,.ts,.tsx,.java,.cpp,.c,.cs,.php,.go,.rb,.rs,.swift,.kt,.scala,.sh,.sql,.html,.css,.vue,.json,.xml,.yaml,.yml

# 缓存配置
CACHE_DIR=/var/cache/ai_audit
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE_MB=1024

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/var/log/ai_audit/app.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# 安全配置
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=480
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# 邮件配置（用于通知）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=CHANGE_THIS_EMAIL_PASSWORD
SMTP_TLS=true
FROM_EMAIL=noreply@yourdomain.com

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# 性能配置
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
WORKER_CONNECTIONS=1000
WORKER_PROCESSES=4

# 限流配置
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
API_RATE_LIMIT_PER_MINUTE=50

# 生产环境标识
ENVIRONMENT=production
DEBUG=false
TESTING=false
